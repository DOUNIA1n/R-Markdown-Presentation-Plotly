# Create a scatter plot using ggplot2
p <- ggplot(data, aes(x = carat, y = price, color = clarity, size = depth)) +
  geom_point(alpha = 0.7) +
  labs(title = "Diamond Carat vs Price",
       x = "Carat",
       y = "Price",
       color = "Clarity",
       size = "Depth")

# Convert ggplot to a Plotly interactive plot
ggplotly(p)
